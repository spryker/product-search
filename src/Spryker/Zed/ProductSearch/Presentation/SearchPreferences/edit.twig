{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Edit Search Preferences' %}

{% block section_title widget_title | trans %}
{% block head_title widget_title | trans %}

{% block action %}
    {{ backActionButton('/product-search/search-preferences', 'Back to Search Preferences' | trans) }}
    <a href="#" class="btn-sm"><i class="fa fa-question-circle" aria-hidden="true"></i></a>
{% endblock %}

{% block content %}
    {% embed '@Gui/Partials/widget.twig' %}
        {% block widget_content %}

            {{ form_start(form) }}
                {{ form_widget(form) }}

                <input type="submit" class="btn btn-primary" value="{{ 'Save' | trans }}" />
            {{ form_end(form) }}

        {% endblock %}
    {% endembed %}
{% endblock %}
