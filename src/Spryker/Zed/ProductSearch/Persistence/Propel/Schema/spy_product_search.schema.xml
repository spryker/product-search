<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:noNamespaceSchemaLocation="http://xsd.propelorm.org/1.6/database.xsd" namespace="Orm\Zed\ProductSearch\Persistence" package="src.Orm.Zed.ProductSearch.Persistence">

    <table name="spy_product_search_attributes_operation">
        <column name="source_attribute_id" type="INTEGER" required="true" primaryKey="true"/>
        <column name="operation" type="VARCHAR" required="true" primaryKey="true"/>
        <column name="target_field" type="VARCHAR" required="true" primaryKey="true"/>
        <column name="weighting" type="INTEGER" required="true" defaultValue="0"/>

        <index name="spy_product_search_attributes_operation-source_attribute_id">
            <index-column name="source_attribute_id"/>
            <index-column name="weighting"/>
        </index>

        <foreign-key name="spy_product_search_attributes_operation-source_attribute_id" foreignTable="spy_product_attributes_metadata" onDelete="cascade">
            <reference local="source_attribute_id" foreign="id_product_attributes_metadata"/>
        </foreign-key>
    </table>
    <table name="spy_product_search">
        <column name="id_product_search" type="INTEGER" primaryKey="true" autoIncrement="true"/>
        <column name="fk_product" type="INTEGER"/>
        <column name="fk_locale" type="INTEGER"/>
        <column name="is_searchable" type="BOOLEAN" defaultValue="true"/>

        <foreign-key name="spy_product_search-fk_product" foreignTable="spy_product">
            <reference local="fk_product" foreign="id_product"/>
        </foreign-key>
        <foreign-key name="spy_product_search-fk_locale" foreignTable="spy_locale">
            <reference local="fk_locale" foreign="id_locale"/>
        </foreign-key>
        <id-method-parameter value="spy_product_search_pk_seq"/>
    </table>
</database>
